<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecipesPage"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="26dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_round_arrow_back_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#000000" />

    <ImageView
        android:id="@+id/recipePhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/recipeName"
        app:layout_constraintBottom_toTopOf="@id/ingredients"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="22dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="fill_horizontal"
        android:autoSizeTextType="uniform"
        app:layout_constraintVertical_chainStyle="packed"
        android:lines="2"
        android:text="Recipe name"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/recipePhoto"/>

    <TextView
        android:id="@+id/recipeCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="16dp"
        android:text="Calories: "
        android:gravity="center"
        android:textSize="20dp"
        android:maxLines = "1"
        android:autoSizeTextType="uniform"
        app:layout_constraintLeft_toRightOf="@id/recipePhoto"
        app:layout_constraintTop_toTopOf="@id/recipePhoto"
        app:layout_constraintBottom_toBottomOf="@id/recipePhoto" />

    <ImageView
        android:id="@+id/favouritePhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/notfavourite"
        app:layout_constraintLeft_toRightOf="@id/recipeCalories"
        app:layout_constraintBottom_toBottomOf="@id/recipeCalories"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ingredients"
        android:gravity="center"
        android:textSize="22dp"
        android:maxLines = "1"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toTopOf="@id/constraint_layout1"
        app:layout_constraintTop_toBottomOf="@id/recipePhoto"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/ingredients"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_menu2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>